  <li>
    <%= gravatar_for(user, size:50) %>
    <span class="content">
      <% if user.admin? %>
        <%=link_to(user.name,user,{:class =>"admins-url"}) %>
      <% else %>
        <%=link_to(user.name,user) %>
     <% end %>
    <% if   current_user.admin? && !current_user?(user) %>
        | <%= link_to(
        'Delete', user, method: :delete, 
        data: {confirm:"User #{user.name} will be removed. This action is irreversible. Are you willing to continue?"}); %>
      <% end %>
    </span>
    <span class="timestamp">
      Total tweets:  <%= user.microposts.count %>
    </span> 
  </li>

