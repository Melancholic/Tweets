<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |usr| %>
            <%= link_to(gravatar_for(usr, size: 30), usr) %>
          <%end%>
        </div>
      <%end %>
    </section>
  </aside>
  <div class="span8">
    <h3> <%=@title %></h3>
    <% if(@users.any?) %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
