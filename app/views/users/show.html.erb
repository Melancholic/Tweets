<% provide(:title,@user.name)%>
<div class="row">
  <aside class ="span4">
    <section>
      <h1>
        <%= gravatar_for(@user) %>
        <div><%= @user.name %> </div>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3> Total microposts: <%=@user.microposts.count %> </h3>
      <ol class="microposts">
        <%=render @microposts%>
      </ol>
      <%= will_paginate @microposts %>
    <% else %>
       <h3> No microposts! </h3>
    <%end%>
  </div>
</div>
