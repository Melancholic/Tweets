<% provide(:title,'Edit profile') %> 
<div class="center hero-unit">
  <h1>Update your profile</h1>  
</div>
<div class="row">
  <aside class ="span4">
    <section>
      <%= link_to(gravatar_for(@user,size:150),"http://gravatar.com/emails" ,:target => "_blank", :hint =>'Change Gravatar') %>
    </section>
    <section>
      <%= link_to('Change Gravatar',"http://gravatar.com/emails" ,:target => "_blank", :hint =>'Change Gravatar') %>
    </section>
  </aside>
  <div class ="span8">  
    <%= form_for(@user) do |f| %>
      <%= render('shared/error_msgs', object: f.object) %>
      <%=render 'fields', f: f %>
      <%=# select_tag(:tag,options_for_select([['>20',1],['20 - 40',2],['>40',3]])) %> 
      <br>
      <%= f.submit("Save changes", class: "btn btn-large btn-primary") %>
    <% end %>
  </div>
</div>


